{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./build/js",
    "rootDir": ".",
    "declaration": true,
    "newLine": "LF"
  },
  "exclude": [
    "node_modules",
    "build",
    ".c9",
    ".vscode"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "tools/**/*.ts"
  ]
}
