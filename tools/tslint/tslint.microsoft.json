{
  "extends": "tslint-microsoft-contrib",
  "rules": {
    // See: https://github.com/Microsoft/tslint-microsoft-contrib#supported-rules
    "function-name": true,
    "insecure-random": true,
    "mocha-avoid-only": true,
    "mocha-no-side-effect-code": true,
    "mocha-unneeded-done": true,
    "no-banned-terms": true,
    "no-constant-condition": true,
    "no-control-regex": true,
    "no-cookies": true,
    "no-delete-expression": true,
    "no-disable-auto-sanitization": true,
    "no-document-domain": true,
    "no-document-write": true,
    "no-duplicate-case": true,
    "no-exec-script": true,
    "no-for-in": true,
    "no-function-constructor-with-string-args": true,
    "no-http-string": true,
    "no-inner-html": true,
    "no-invalid-regexp": true,
    "no-octal-literal": true,
    "no-regex-spaces": true,
    "no-string-based-set-immediate": true,
    "no-string-based-set-interval": true,
    "no-string-based-set-timeout": true,
    "no-suspicious-comment": true,
    "no-unnecessary-bind": true,
    "no-unnecessary-semicolons": true,
    "no-var-self": true,
    "no-with-statement": true,
    "prefer-array-literal": true,
    "valid-typeof": true,

    // Disabled due to 'requires type checking'
    "no-for-in-array": false,
    "restrict-plus-operands": false,

    // Disabled because of deprecation
    "no-unused-variable": false,

    // Explicitly disabled rules.
    "prefer-type-cast": false, // in function calls we prefer 'as', but in return statements and assignments, we prefer <>
    "missing-jsdoc": false,
    "no-string-literal": false,
    "interface-name": false,
    "import-name": false, // complains about should be named 'sinon-chai' but found 'sinonChai'
    "export-name": false,
    "no-multiline-string": false, // caused false positives
    "chai-vague-errors": false,
    "no-empty-interfaces": false,
    "no-empty-line-after-opening-brace": false,
    "no-function-expression": false, // See TSLint: only-arrow-functions
    "no-increment-decrement": false,
    "no-relative-imports": false,
    "no-reserved-keywords": false,
    "no-single-line-block-comment": false,
    "no-sparse-arrays": false,
    "no-unnecessary-local-variable": false,
    "prefer-const": false,
    // Does not work as expected, the WebStorm inspection however does work as expected
    "promise-must-complete": false
  }
}
