{
  "name": "typescript-assistant",
  "version": "0.34.2",
  "description": "Combines and integrates professional Typescript tools into your project",
  "main": "dist/index.js",
  "bin": {
    "tsa": "./dist/index.js"
  },
  "scripts": {
    "prepublishOnly": "tsc -p ./src/tsconfig.json",
    "assist": "ts-node --transpileOnly src/index.ts",
    "prerelease": "ts-node --transpileOnly src/index ci",
    "release": "ts-node --transpileOnly src/index.ts release",
    "fix": "ts-node --transpileOnly src/index fix",
    "clean": "ts-node --transpileOnly src/index clean",
    "coverage-show": "opn build/coverage/index.html",
    "tslint": "tslint --project ./src/tsconfig.json ./src/**/*.ts && tslint --project ./tsconfig.json ./test/**/*.ts",
    "ci": "ts-node --transpileOnly src/index ci"
  },
  "author": "johan@johangorter.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AFASSoftware/typescript-assistant"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary"
    ],
    "cache": true,
    "temp-dir": "./build/nyc/cache",
    "all": true,
    "check-coverage": false,
    "report-dir": "./build/coverage",
    "es-module": false,
    "lines": 1,
    "statements": 0.1,
    "functions": 0.1,
    "branches": 0,
    "watermarks": {
      "lines": [
        75,
        100
      ],
      "functions": [
        75,
        100
      ],
      "branches": [
        75,
        100
      ],
      "statements": [
        75,
        100
      ]
    }
  },
  "dependencies": {
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.5",
    "@types/node": "10.12.9",
    "async": "2.6.1",
    "chai": "4.2.0",
    "chokidar": "2.0.4",
    "glob": "7.1.3",
    "handlebars": "4.0.12",
    "husky": "1.1.4",
    "inquirer": "6.2.0",
    "mocha": "5.2.0",
    "nyc": "13.1.0",
    "opn-cli": "4.0.0",
    "semver": "5.6.0",
    "source-map-support": "0.5.9",
    "tree-kill": "1.2.1",
    "ts-node": "7.0.1",
    "tslib": "1.9.3",
    "tslint": "5.11.0",
    "tslint-microsoft-contrib": "5.2.1",
    "tslint-sonarts": "1.8.0",
    "tsutils": "3.5.0",
    "typescript": "3.1.6",
    "typescript-formatter": "7.2.2",
    "ws": "6.1.2",
    "yargs": "12.0.4"
  },
  "devDependencies": {
    "@types/async": "2.0.50",
    "@types/chokidar": "1.7.5",
    "@types/glob": "7.1.1",
    "@types/handlebars": "4.0.39",
    "@types/inquirer": "0.0.43",
    "@types/semver": "5.5.0",
    "@types/sinon": "5.0.6",
    "@types/ws": "6.0.1",
    "@types/yargs": "12.0.1",
    "sinon": "7.1.1"
  },
  "husky": {
    "hooks": {
      "post-checkout": "ts-node --transpileOnly src/index post-checkout || exit 0",
      "post-merge": "ts-node --transpileOnly src/index post-merge || exit 0",
      "pre-commit": "ts-node --transpileOnly src/index pre-commit",
      "pre-push": "ts-node --transpileOnly src/index pre-push"
    }
  }
}
